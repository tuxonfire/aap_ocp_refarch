apiVersion: grafana.integreatly.org/v1beta1
kind: GrafanaDataSource
metadata:
  name: GrafanaDatasource
  namespace: {{ prometheus_namespace }}
spec:
  datasource:
    jsonData:
      timeInterval: 5s
      tlsSkipVerify: true
    access: proxy
    isDefault: true
    name: prometheus
    type: prometheus
    url: 'http://prometheus-service:9090'
  instanceSelector:
    matchLabels:
      dashboards: grafana-a
  plugins:
    - name: grafana-clock-panel
      version: 1.3.0
  resyncPeriod: 5m
